{
  "compilerOptions": {
		"target": "esnext",
		"moduleResolution": "bundler",
		"forceConsistentCasingInFileNames": true,
    "strict": true,
		"noEmit": true,
    "outDir": "dist/out-tsc",
    "declaration": true,
    "rootDir": "./",
    "baseUrl": "./",
    "types": [],
  },
  "exclude": [
    "./node_modules/**",
    "./src/**/*.spec.js",
    "./src/**/*.spec.jsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx"
  ],
  "include": [
    "./src/**/*.json",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}